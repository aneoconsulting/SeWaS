{
  "version": "0.2.1",
  "defaults": {},
  "configurations": [
    {
      "type": "default",
      "project": "CMakeLists.txt",
      "projectTarget": "sewas.exe",
      "name": "sewas.exe",
      "args": [
        "--cx",
        "3",
        "--cy",
        "200",
        "--cz",
        "200",
        "--P",
        "1",
        "--Q",
        "1",
        "--R",
        "1",
        "--nthreads",
        "2",
        "--dfile=${workspaceRoot}/data/input/TestC.json"
      ],
      "env": { "VERBOSITY_LEVEL": "INFO" }
    },
    {
      "type": "cppdbg",
      "name": "sewas",
      "project": "CMakeLists.txt",
      "projectTarget": "sewas",
      "cwd": "${debugInfo.defaultWorkingDirectory}",
      "program": "${debugInfo.fullTargetPath}",
      "args": [
        "--cx",
        "50",
        "--cy",
        "50",
        "--cz",
        "100",
        "--P",
        "1",
        "--Q",
        "1",
        "--R",
        "1",
        "--nthreads",
        "8",
        "--dfile=${env.REMOTE_SEWAS_ROOT}/src/data/input/TestA.json"
      ],
      "MIMode": "gdb",
      "externalConsole": true,
      "remoteMachineName": "${debugInfo.remoteMachineName}",
      "setupCommands": [
        {
          "text": "Documentation: Learn how to configure remote debugging",
          "description": "See here for more info http://aka.ms/vslinuxdebug",
          "ignoreFailures": true
        },
        {
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "pipeTransport": {
        "pipeProgram": "${debugInfo.shellexecPath}",
        "pipeArgs": [
          "/s",
          "${debugInfo.remoteMachineId}",
          "/p",
          "${debugInfo.parentProcessId}",
          "/c",
          "${debuggerCommand}",
          "--tty=${debugInfo.tty}"
        ],
        "debuggerPath": "/usr/bin/gdb"
      },
      "visualizerFile": "${debugInfo.linuxNatvisPath}",
      "showDisplayString": true
    }
  ]
}